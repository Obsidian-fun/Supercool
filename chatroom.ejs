<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Supercool | Chat</title>
  <script src="/node_modules/socket.io/client-dist/socket.io.js"></script>
  <script def src="client.js" type="module"></script>
  <style>

  body{
    background-color: #3c2207;
  }

  .header {
    display: flex;
    justify-content: space-between;
  }

   h1{
    color: #d3e4d5;
    background-color: #3c2207;
    padding-left: 20px;
    font-family: Chalkduster, fantasy;
    margin-top: 5px;
  }

   h2{
    font-size:1.5rem;
    color: #d3e4d5;
   }

   h3{
    margin-left: 25%;
   }

  .credit-header {
    display: flex;
   }

  .credit-header .credit{
    color: white;
    font-size:1.2rem;
    font-family: Snell Roundhand, cursive;
    display: none;
  }

  .credit-header .arrow{
    width: 100px;
    margin-top: 40px;
    display: none;
  }

  .credit-header .obsidian{
    width: 80px;
    height:80px;
    border-radius: 50%;
    margin-right: 20px;
    margin-top: 0px;
    border: 1px solid yellow;
  }

  .credit-header .obsidian:hover{
    border: 1px solid red;
  }

  em {
    background: linear-gradient(to right, violet, red);
    color: #1eeaaa;
  }

  .navbar {
    color: #d3e4d5;
    font-family: Chalkduster, fantasy;
    font-size: 1.1rem;
    padding-left: 20px;
  }

  .navbar:hover {
    color: yellow;
    text-shadow: 0 0 10px yellow;
    transition: all 0.5s ease-out;
  }

  .Container {
    display: flex;
    margin-top: 10px;
    height: 100%;
  }

  .Container .Users{
    background-color: black;
    color: white;
    width: 20%;
    height: 80vh;
    border: 2px solid #9400d3;
    margin-left: 5px;
  }
  
  .Container .Chatbox {
    background-color: black;
    width: 80%;
    color: white;
    border: 2px solid #9400d3;
    height: 80vh;
    margin-right: 5px;
  }

  .Container .Chatbox .message-container {
    padding-bottom: 10px;
  }

  .Container .Chatbox #form #message-input {
    position: absolute;
    bottom: 0; 
    width: 66vw; 
    font-size: 1.3rem;
    padding: 10px;
    border: 3px solid purple;
    outline: none;
  }

  .logout-button {
    position: absolute;
    color: grey;
    text-decoration: none;
    font-size: 1.3rem;
    background: transparent; 
    padding: 10px;
    right: 1%;
    bottom: 0;
    border: 3px solid grey;
    width: 18vh;
    -webkit-transistion: background-color 1s ease-out;
    -moz-transition: background-color 1s ease-out;
    -o-transition: background-color 1s ease-out;
    transition-property: width, background-color;
    transition-duration: 1s;
    transition-timing-function: ease-out;
  }

  .logout-button:hover {
    background-color:red;
    color: white;
  }

  li{
    list-style-type: none;
  }

  </style>
</head>
<body>
  <!-- Header -->
  <div class="header">
    <h1>SUPER&nbsp<em>COOL </em>&nbspCHATROOM</h1>
  
  <div class="credit-header">
   <p class="credit">Made by Obsidian üôè</p>
   <img class="arrow" src="./assets/arrow.png" alt="Arrow">
   <a href="https://github.com/Obsidian-fun" target="_blank" rel="norefferer"><img class="obsidian" src="./assets/obsidian.png" alt="Obsidian"></a>
  </div>
  </div>
    <a href="/" class="navbar">Home</a>
    <a href="#" class="navbar">About</a>

 <div class="Container">
  <!-- User List -->
  <div class="Users">
    <h3>Online Users</h3>
  </div>
  <!-- Chatbox -->
  <div class="Chatbox">
    <div id="message-container">
      <ul id="message"></ul>
    <form id="form" action="submit">
       <input type="text" id="message-input" placeholder="Message...">
    </form> 
    <a class="logout-button" href="/logout">LOG OUT</a>
    </div>
  </div>
 </div>

<script>


 credit = document.querySelector('.credit-header .credit');
    const arrow = document.querySelector('.credit-header .arrow');
    const obsidian = document.querySelector('.credit-header .obsidian');
   
    obsidian.addEventListener('mouseover', ()=>{
     credit.style.display = "block";
     arrow.style.display = "block";
    });
   
    obsidian.addEventListener('mouseout', ()=>{
      credit.style.display = "none";
      arrow.style.display = "none";
    });
</script>


</body>
